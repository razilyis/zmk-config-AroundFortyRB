#include "AroundForty-RB.dtsi"
#include <dt-bindings/zmk/pointing.h>
#include <dt-bindings/zmk/input_transform.h>
#include <input/processors.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>


/* ---------------------------------------------------------
 * Default transform
 * --------------------------------------------------------- */
&default_transform {
    col-offset = <6>;
};


/* ---------------------------------------------------------
 * Key scan (matrix)
 * --------------------------------------------------------- */
&kscan0 {
    col-gpios
        = <&xiao_d 10 GPIO_ACTIVE_HIGH>
        , <&xiao_d  9 GPIO_ACTIVE_HIGH>
        , <&xiao_d  8 GPIO_ACTIVE_HIGH>
        , <&xiao_d  7 GPIO_ACTIVE_HIGH>
        , <&gpio0  10 GPIO_ACTIVE_HIGH>
        ;
};


/ {
    /* =====================================================
     * Scroll mapper (tunable: X / Y invert switches)
     * =====================================================
     * 目的：
     *   - 今はスクロール方向を変えない
     *   - 将来、縦 / 横を個別に反転できるようにしておく
     *
     * 使い方：
     *   scroll-layer の input-processors で
     *     &zip_xy_to_scroll_mapper        → 現在使用中（デフォルト）
     *     &zip_xy_to_scroll_mapper_tune   → 将来調整用
     * に切り替える
     */
    zip_xy_to_scroll_mapper_tune: zip_xy_to_scroll_mapper_tune {
        compatible = "zmk,input-processor-xy-to-scroll";
        #input-processor-cells = <0>;

        /* 縦スクロール方向を反転（必要になったら有効化） */
        // scroll-y-invert;

        /* 横スクロール方向を反転（必要になったら有効化） */
        // scroll-x-invert;
    };


    /* -----------------------------------------------------
     * Trackball input listener
     * ----------------------------------------------------- */
    trackball_listener: trackball_listener {
        compatible = "zmk,input-listener";
        device = <&trackball>;

        /* 通常カーソル用 input processors */
        input-processors =
            /* X方向のみ反転（筐体都合の補正） */
            <&zip_xy_transform (INPUT_TRANSFORM_X_INVERT)>

            /* カーソル速度（X, Y） */
            <&zip_xy_scaler 1 1>

            /* Auto Mouse Layer を使う場合は有効化 */
            /* <&zip_temp_layer 9 300> */
            ;


        /* -------------------------------------------------
         * Scroll layer (Layer 6 / 7)
         * ------------------------------------------------- */
        scroll-layer {
            layers = <6 7>; /* スクロール用レイヤー */

            input-processors =
                /*
                 * ▼ 現在使用中（向きは変えない）
                 */
                <&zip_xy_to_scroll_mapper>

                /*
                 * ▼ 将来、向きを変えたくなったら上をコメントアウトして
                 *    下を有効化し、tuneノードでX/Y反転を切り替える
                 */
                /* <&zip_xy_to_scroll_mapper_tune> */

                /* スクロール速度をゆっくりに */
                <&zip_scroll_scaler 1 45>
                ;
        };
    };
};


/* ---------------------------------------------------------
 * SPI pin control
 * --------------------------------------------------------- */
&pinctrl {
    spi0_default: spi0_default {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK,  0, 5)>,
                    <NRF_PSEL(SPIM_MOSI, 0, 4)>,
                    <NRF_PSEL(SPIM_MISO, 0, 4)>;
        };
    };

    spi0_sleep: spi0_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK,  0, 5)>,
                    <NRF_PSEL(SPIM_MOSI, 0, 4)>,
                    <NRF_PSEL(SPIM_MISO, 0, 4)>;
            low-power-enable;
        };
    };
};


/* ---------------------------------------------------------
 * Disable serial
 * --------------------------------------------------------- */
&xiao_serial {
    status = "disabled";
};


/* ---------------------------------------------------------
 * SPI + PMW3610 trackball
 * --------------------------------------------------------- */
&spi0 {
    status = "okay";
    compatible = "nordic,nrf-spim";

    pinctrl-0 = <&spi0_default>;
    pinctrl-1 = <&spi0_sleep>;
    pinctrl-names = "default", "sleep";

    cs-gpios = <&gpio0 9 GPIO_ACTIVE_LOW>;

    trackball: trackball@0 {
        status = "okay";
        compatible = "pixart,pmw3610-alt";
        reg = <0>;

        spi-max-frequency = <2000000>;

        evt-type = <INPUT_EV_REL>;
        x-input-code = <INPUT_REL_X>;
        y-input-code = <INPUT_REL_Y>;

        cpi = <400>;

        irq-gpios = <&gpio0 2 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        force-awake;
    };
};
